<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
	<form-beans>
		<form-bean name="ingresoPagoFB" type="com.immobilis.cobro.form.IngresoPagoForm" />
		<form-bean name="reporteCobrosFB" type="com.immobilis.cobro.form.ReporteCobrosForm" />
	</form-beans>

	<global-forwards></global-forwards>

	<action-mappings>

		<action name="ingresoPagoFB" 
			path="/ingresoPagoAction"
			type="com.immobilis.cobro.action.IngresoPagoAction"
			parameter="method" input="/pages/index.jsp" 
			scope="request">
			
			<forward name="index" path="/pages/home.jsp" />
			<forward name="ingresoPago" path="/pages/ingresoPago.jsp" />
		</action>
		<action name="reporteCobrosFB" path="/reporteCobrosAction"
			type="com.immobilis.cobro.action.ReporteCobrosAction"
			parameter="method" input="/pages/index.jsp" scope="request">
			<forward name="index" path="/pages/home.jsp" />
			<forward name="reporteCobros" path="/pages/reporteCobros.jsp" />
		</action>
	</action-mappings>

</struts-config>