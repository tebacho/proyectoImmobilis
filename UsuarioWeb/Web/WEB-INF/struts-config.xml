<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
	<form-beans>
		<form-bean name="loginFB" type="com.immobilis.usuarioweb.form.LoginForm" />
		<form-bean name="registroFB" type="com.immobilis.usuarioweb.form.RegistroForm" />
	</form-beans>
	
	<global-forwards></global-forwards>
	
	<action-mappings>
		<action
            name ="loginFB"
            path="/loginAction"
            type="com.immobilis.usuarioweb.action.LoginAction"
            parameter="method"
            input="/pages/index.jsp"
            scope="request">
            <forward name="index"        path="/pages/home.jsp"/>     
            <forward name="login"        path="/pages/login.jsp"/>
            
        </action>
        
        		<action
            name ="registroFB"
            path="/registroAction"
            type="com.immobilis.usuarioweb.action.RegistroAction"
            parameter="method"
            input="/pages/index.jsp"
            scope="request">
            <forward name="index"        path="/pages/home.jsp"/>     
            <forward name="registro"        path="/pages/registrarse.jsp"/>
            
        </action>
        
	</action-mappings>
	
	
	
	
	
</struts-config>